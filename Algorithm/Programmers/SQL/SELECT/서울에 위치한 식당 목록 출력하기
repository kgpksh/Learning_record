-- 코드를 입력하세요
SELECT REST_ID, REST_NAME, FOOD_TYPE, FAVORITES
, ADDRESS, (SELECT ROUND(AVG(REVIEW_SCORE), 2)
            FROM REST_REVIEW RV
            WHERE RI.REST_ID = RV.REST_ID) SCORE
FROM REST_INFO RI
WHERE RI.ADDRESS LIKE '서울%' 
            AND (SELECT ROUND(AVG(REVIEW_SCORE), 2)
                FROM REST_REVIEW RV
                WHERE RI.REST_ID = RV.REST_ID) IS NOT NULL
ORDER BY SCORE DESC, FAVORITES DESC